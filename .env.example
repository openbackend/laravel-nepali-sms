# Laravel Nepali SMS Configuration

# Default SMS Gateway
NEPALI_SMS_DEFAULT_GATEWAY=sparrow

# Sparrow SMS Configuration
SPARROW_SMS_TOKEN=your_sparrow_token_here
SPARROW_SMS_FROM=YourApp

# Sparrow A2P Configuration
SPARROW_A2P_CLIENT_ID=your_client_id_here
SPARROW_A2P_CLIENT_SECRET=your_client_secret_here
SPARROW_A2P_FROM=YourApp

# Ebeema SMS Configuration
EBEEMA_USERNAME=your_username_here
EBEEMA_PASSWORD=your_password_here
EBEEMA_FROM=YourApp

# EasySMS Configuration
EASYSMS_API_KEY=your_api_key_here
EASYSMS_FROM=YourApp

# SMS24x7 Configuration
SMS24X7_USERNAME=your_username_here
SMS24X7_PASSWORD=your_password_here
SMS24X7_FROM=YourApp

# OTP Configuration
NEPALI_SMS_OTP_LENGTH=6
NEPALI_SMS_OTP_EXPIRY=300
NEPALI_SMS_OTP_TEMPLATE="Your OTP code is: {otp}. Valid for {expiry} minutes."
NEPALI_SMS_OTP_MAX_ATTEMPTS=3

# Rate Limiting
NEPALI_SMS_RATE_LIMIT_ENABLED=true
NEPALI_SMS_RATE_LIMIT_MAX_ATTEMPTS=5
NEPALI_SMS_RATE_LIMIT_DECAY_MINUTES=1

# Queue Configuration
NEPALI_SMS_QUEUE_ENABLED=false
NEPALI_SMS_QUEUE_CONNECTION=default
NEPALI_SMS_QUEUE_NAME=sms

# Logging
NEPALI_SMS_LOGGING_ENABLED=true
NEPALI_SMS_LOG_CHANNEL=single
NEPALI_SMS_LOG_LEVEL=info

# Failover
NEPALI_SMS_FAILOVER_ENABLED=false

# Analytics
NEPALI_SMS_ANALYTICS_ENABLED=true
NEPALI_SMS_ANALYTICS_RETENTION_DAYS=90
NEPALI_SMS_TRACK_DELIVERY_STATUS=true

# Webhook
NEPALI_SMS_WEBHOOK_ENABLED=false
NEPALI_SMS_WEBHOOK_URL=
NEPALI_SMS_WEBHOOK_SECRET=

# Message Validation
NEPALI_SMS_MAX_MESSAGE_LENGTH=160
NEPALI_SMS_ENCODING=UTF-8
NEPALI_SMS_ALLOW_UNICODE=true

# Cost Tracking
NEPALI_SMS_COST_TRACKING_ENABLED=false
NEPALI_SMS_COST_CURRENCY=NPR
NEPALI_SMS_DEFAULT_COST=1.0
